<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.hi.post.dao.PostDAO">
    <select id="selectPosts" resultType="PostVO">
		select * from post order by num desc
	</select>
	
	<select id="selectPost" resultType="PostVO">
		select * from post where num = #{num}
	</select>
	
	<insert id="InsertPost">
		insert into post(title, content, writer)
		values(#{postVO.title}, #{postVO.content}, #{postVO.writer})
	</insert>
	
	<delete id="postDelete">
		delete from post where num = #{num}
	</delete>
</mapper>